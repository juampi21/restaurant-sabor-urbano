doctype html
html
  head
    title #{title} - Sabor Urbano
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/style.css')
  body
    nav.navbar.navbar.expand-lg.navbar-dark.bg-dark.mb-4
      .container
        a.navbar-brand(href='/') Sabor Urbano
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav
            if user
              li.nav-item
                a.nav-link(href='/tasks') Tareas
              li.nav-item
                a.nav-link(href='/orders') Pedidos
              if user.role === 'admin'
                li.nav-item
                  a.nav-link(href='/employees') Empleados
              li.nav-item
                a.nav-link(href='/inventory') Inventario
              li.nav-item
                a.nav-link.text-danger(href='/auth/logout') Salir
            else
              li.nav-item
                a.nav-link(href='/auth/login') Ingresar
              li.nav-item
                a.nav-link(href='/auth/register') Registrarse
    
    .container
      block content

    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js')
