extends ../layout

block content
  h2.mb-4= title
  form(action=`/inventory/supplies/${supply.id}?_method=PUT`, method='POST')
    .mb-3
      label.form-label(for='name') Nombre del Insumo
      input#name.form-control(type='text', name='name', value=supply.name, required)
    
    .row
      .col-md-6.mb-3
        label.form-label(for='quantity') Cantidad
        input#quantity.form-control(type='number', name='quantity', value=supply.quantity, required, min='0')
      
      .col-md-6.mb-3
        label.form-label(for='unit') Unidad
        input#unit.form-control(type='text', name='unit', value=supply.unit, required, placeholder='kg, u, lts')

    button.btn.btn-primary(type='submit') Guardar Cambios
    a.btn.btn-secondary.ms-2(href='/inventory') Cancelar
